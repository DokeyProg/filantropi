---
import Link from "./Link.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header x-data="{ showmenu: false }" class="bg-seaGreen-800">
  <div id="navbar" class="container mx-auto p-4 flex flex-row justify-between items-center">
    <div id="logo" class="">
      <Link href="/" class="l1">
        <img src="src/assets/logo.svg" alt="Logo" />
      </a>
    </div>
    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-10">
        <li class="text-center py-2 l1"><Link href="/" class="">Forside</Link></li><!-- alternativt: lav et <a href="">Link</a>, hvis du ikke vil bruge Link.astro komponenten -->
        <li class="text-center py-2 l1"><Link href="/deltagelsesform" class="">Deltage</Link></li>
        <li class="text-center py-2 l1"><Link href="/om" class="">Om os</Link></li>
      </ul>
    </nav>
    <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu">
      <img src="src/assets/menu-open.svg" alt="Menu" />
    </button>
  </div>
  <nav id="mobilmenu" class="w-full flex flex-col content-center bg-seaGreen-800" x-show="showmenu" x-cloak x-transition x-on:click.outside="showmenu = false">
    <ul class="border-t-2 border-b-2 border-black flex flex-col items-end">
      <li class="text-center p-4 l1"><Link href="/" class="">Forside</Link></li>
      <li class="text-center p-4 l1"><Link href="/deltagelsesform" class="">Deltagelse</Link></li>
      <li class="text-center p-4 l1"><Link href="/om" class="">Om os</Link></li>
    </ul>
  </nav>
</header>
